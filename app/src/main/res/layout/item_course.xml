<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

    <!-- 제목 및 하트 아이콘을 담을 LinearLayout (수평 배치) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|end">

        <!-- 제목 텍스트 -->
        <TextView
            android:id="@+id/courseNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="데이트 코스 제목"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="7dp"/>

        <!-- 찜할 수 있는 하트 아이콘 -->
        <ImageView
            android:id="@+id/heartImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:src="@android:drawable/btn_star_big_off"
            android:contentDescription="찜하기 버튼"/>

    </LinearLayout>

    <!-- 장소 및 날짜 텍스트를 담을 LinearLayout (세로 배치) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 장소 텍스트 -->
        <TextView
            android:id="@+id/courseLocationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="장소: 서울 강남구"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:layout_marginLeft="7dp"/>

        <!-- 날짜 텍스트 -->
        <TextView
            android:id="@+id/courseDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜: 2023.11.15"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginLeft="7dp"/>

    </LinearLayout>

</LinearLayout>

    </androidx.cardview.widget.CardView>
